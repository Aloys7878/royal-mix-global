name: Mobile Build

on:
  push:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      - uses: expo/expo-github-action@v8
        with:
          eas-version: latest

      - run: cd apps/mobile && npm install

      - run: cd apps/mobile && eas build --profile preview --platform android
