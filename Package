import { TouchableOpacity, Text } from "react-native";

export const Button = ({ label, onPress }) => (
  <TouchableOpacity
    style={{
      backgroundColor: "#2C2CFF",
      padding: 16,
      borderRadius: 12,
    }}
    onPress={onPress}
  >
    <Text style={{ color: "white", fontSize: 18 }}>{label}</Text>
  </TouchableOpacity>
);
