model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  piUserId  String?  @unique
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  sessions  Session[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}
