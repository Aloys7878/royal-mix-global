name: CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 18
      - name: Install deps
        run: |
          cd apps/mobile || true
          npm ci || true
      - name: Lint (example)
        run: |
          echo "Add your lint/test commands here"

  build-expo:
    runs-on: ubuntu-latest
    needs: lint
    steps:
      - uses: actions/checkout@v4
      - name: Set up Node
        uses: actions/setup-node@v4
        with:
          node-version: 18
      - name: Install Expo CLI
        run: npm install -g expo-cli
      - name: Install app deps
        run: |
          cd apps/mobile
          npm ci
      - name: Run unit tests
        run: |
          cd apps/mobile
          # run tests if present
          echo "No tests configured"
